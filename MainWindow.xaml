<Window x:Class="LoginApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginApp"
        mc:Ignorable="d"
        Title="Kouki Application" Height="450" Width="800">

    <Grid Background = "White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>

        <!--Change password bar-->

        <Grid Width="280"
              HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <Grid.Background>
                <ImageBrush ImageSource="/Imagee/background1.png"/>
            </Grid.Background>
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="DENSO"
                           FontSize="28"
                           FontStyle="Italic"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"/>

                <TextBlock Text="Machinery, Tools"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           TextAlignment="Center"/>

                <TextBlock Text="Kouki"
                           FontSize="18"
                           Foreground="White"
                           TextAlignment="Center"/>

                <TextBlock TextWrapping="Wrap"
                           Text="Click here if you really really reallyyyy want to change your password. Think wisely, okay?"
                           FontSize="12"
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="10"/>

                <Button Name="btnChangePassword"
                        Content="Change Password!"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Width="160"
                        Height="40"
                        Background="#B71C1C"
                        Foreground="White"
                        BorderThickness="1"
                        HorizontalAlignment="Center"
                        Margin="10"
                        Style="{StaticResource RoundedButtonStyle}"
                        MouseEnter="Button_MouseEnter"
                        MouseLeave="Button_MouseLeaveBlue" Click="btnChangePassword_Click">

                </Button>

            </StackPanel>
            <TextBlock Text="Credit by: Hoang Anh KK" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="8"
                       Foreground="White" FontFamily="Californian FB"/>
        </Grid>

        <!--Sign in bar-->

        <StackPanel HorizontalAlignment="Left"
                    Width="500"
                    VerticalAlignment="Center" Grid.Column="1" Margin="34,0,0,0">

            <TextBlock Text="Sign in to App"
                       Foreground="#B71C1C"
                       FontSize=" 26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="10"/>


            <!--Role-->
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">

                <Button 
                Name="btnOperator"
                Width="120"
                    Height="100"
                    Background="White"
                    Margin="5"
                    Style="{StaticResource RoundedButtonStyle}"
                    MouseEnter="Button_MouseEnter"
                    MouseLeave="Button_MouseLeave" Click="btnOperator_Click">
                    <StackPanel>
                        <Image Source="/Imagee/operator_icon.png"
                           Width="70"
                           Height="70"/>
                        <TextBlock Text="Operator"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button 
                Name="btnManager"
                Width="120"
                    Height="100"
                    Background="White"
                    Margin="5"
                    Style="{StaticResource RoundedButtonStyle}"
                    MouseEnter="Button_MouseEnter"
                    MouseLeave="Button_MouseLeave" Click="btnManager_Click">

                    <StackPanel>
                        <Image Source="/Imagee/manager_icon.png"
                   Width="90"
                   Height="70"/>
                        <TextBlock Text="Manager"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Name="btnAutoTeam"
                    Width="120"
                    Height="100"
                    Background="White"
                    Margin="5"
                    Style="{StaticResource RoundedButtonStyle}"
                    MouseEnter="Button_MouseEnter"
                    MouseLeave="Button_MouseLeave" Click="btnAutoTeam_Click">

                    <StackPanel>
                        <Image Source="/Imagee/autoteam_icon.png"
                   Width="100"
                   Height="70"/>
                        <TextBlock Text="Auto Team"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </StackPanel>
            <TextBlock Text="Select a login permission above."
                          FontSize="12"
                          HorizontalAlignment="Center"
                          Margin="10"/>

            <!--Username/Pass boxes-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10">
                <TextBlock Text="Username:"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <TextBox 
                    Name="txtUserName"
                    Width="300"
                         Height="20"
                         Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10">
                <TextBlock Text="Password:"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <PasswordBox 
                    Name="txtPassword"
                    Width="300"
                             Height="20"
                             Margin="5"/>
            </StackPanel>


            <Button 
                Name ="btnSignIn"
                Content="Sign In"
                    Width="200"
                    Height="40"
                    Background="#B71C1C"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Style="{StaticResource RoundedButtonStyle}"
                    MouseEnter="Button_MouseEnter"
                    MouseLeave="Button_MouseLeaveBlue" Click="SignIn_Click"/>

            <Button 
                Name="btnCancel"
                Content="Cancel"
                    Width="200"
                    Height="40"
                    Background="#B71C1C"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Style="{StaticResource RoundedButtonStyle}"
                    MouseEnter="Button_MouseEnter"
                    MouseLeave="Button_MouseLeaveBlue" Click="btnCancel_Click"/>


        </StackPanel>
    </Grid>
</Window>
